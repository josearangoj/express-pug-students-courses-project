extends layout 

block content 
   h1 Students

   for student in students 
      h2 Student ID: #{student.id}
      h3 Name: #{student.name}
      h3 Department: #{student.department}
      h3 Semester: #{student.semester}
      h3 Completed Courses:
      for course in student.coursesCompleted
         h4 Course ID: #{course.id}
         ul
            li Name: #{course.name}
            li Department: #{course.department}
            li Description: #{course.description}
            li Grade Achieved: #{course.grade}%
   br